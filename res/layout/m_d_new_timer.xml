<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TextView android:text="@string/m_d_new_name"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" 
	    android:gravity="center"
	    android:layout_weight="1"
	    /> 
	<EditText android:id="@+id/m_d_text"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:inputType="text"
	    android:layout_weight="1"/>
	<TextView android:text="@string/m_d_minutes"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" 
	    android:gravity="center"
	    android:layout_weight="1"
	    /> 
	<EditText android:id="@+id/m_d_minutes"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:inputType="numberDecimal"
	    android:layout_weight="1"/>
	<TextView android:text="@string/m_d_seconds"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" 
	    android:gravity="center"
	    android:layout_weight="1"
	    /> 
	<EditText android:id="@+id/m_d_seconds"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:inputType="numberDecimal"
	    android:layout_weight="1"/>
</LinearLayout>